<div class="container">
  <div class="card-deck">
    <% @planets.each do |planet| %>
      <%= link_to planet_path(planet) do %>
        <div class="card">
          <%= cl_image_tag planet.photo.key, height: 350, width: 450, crop: :fill %>
          <div class="card-body">
            <h5 class="card-title"><%= planet.name %></h5>
              <p class="card-text"><%= planet.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
