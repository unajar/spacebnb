<div class="navbar navbar-expand-sm navbar-light navbar-lewagon py-0">
  <%= link_to root_path, class: "navbar-brand" do %>
    <i class="fas fa-rocket nav-icon-colour"></i>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li>
          <%= link_to 'Reserve a Planet', planets_path, class: 'nav-link mx-3' %>
        </li>
        <li class="nav-item dropdown d-flex align-items-center">
          <i class="fas fa-user avatar dropdown-toggle nav-icon-colour" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" ></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to 'My Reservations', my_reservations_path, class: 'dropdown-item' %>
            <%= link_to "My Planets", my_planets_path, class: "dropdown-item" %>
            <%= link_to "My Planets' reservations", my_planets_reservations_path, class: 'dropdown-item' %>
            <%= link_to "Log Out", destroy_user_session_path, class: "dropdown-item", method: :delete %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Signup", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
