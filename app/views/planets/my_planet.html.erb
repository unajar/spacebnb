<section class="mb-5">

  <div class="row">
    <div class="col-md-6 mb-4 mb-md-0">

      <div id="mdb-lightbox-ui"></div>

      <div class="mdb-lightbox">

        <div class="row product-gallery mx-1">

          <div class="col-12 mb-0">
            <figure class="view overlay rounded z-depth-1 main-img">
              <%= cl_image_tag @planet.photo.key, height: 400, width: 500, crop: :fill %>
              </a>
            </figure>
          </div>
        </div>

      </div>

    </div>
    <div class="col-md-6">

      <h5><%= @planet.name %></h5>
      <p class="mb-2 text-muted text-uppercase small"><%= @planet.user.email %></p>
      <p><span class="mr-1"><strong><%= humanized_money_with_symbol(@planet.price) %></strong></span></p>
      <p class="pt-1"><strong>DESCRIPTION:</strong></p>
      <p><%= @planet.description %></p>
      <p class="pt-1"><strong>ADDRESS:</strong></p>
      <p><%= @planet.address %></p>
      <div class="table-responsive">
        <table class="table table-sm table-borderless mb-0">
        </table>
      </div>
      <hr>
      <div class="table-responsive mb-2">
        <table class="table table-sm table-borderless">
        </table>
      </div>
      <%= link_to my_planets_path do %>
        <button type="button" class="btn btn-primary btn-md mr-1 mb-2">Back</button><br/>
      <% end %>
      <%= link_to planet_path(@planet), method: :delete, data: { confirm: 'Are you sure you want to delete this planet?' } do %>
        <button type="button" class="btn btn-secondary btn-md mr-1 mb-2">Delete this planet</button><br/>
      <% end %>
      <%= link_to edit_planet_path(@planet) do %>
        <button type="button" class="btn btn-secondary btn-md mr-1 mb-2">Edit this planet</button><br/>
      <% end %>
    </div>
  </div>
</section>
