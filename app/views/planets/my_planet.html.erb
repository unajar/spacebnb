
<p><%= link_to "Back", my_planets_path, class: "btn btn-secondary"%></p>

<h1><%= @planet.name %></h1>

<p>Description: <%= @planet.description %></p>
<p>Address: <%= @planet.address %></p>
<p>Price: <%= humanized_money_with_symbol(@planet.price) %></p>
<%= cl_image_tag @planet.photo.key, height: 300, width: 400, crop: :fill %>

<p><%= link_to "Delete this planet", planet_path(@planet), method: :delete, data: { confirm: 'Are you sure you want to delete this planet?' } %></p>

<p><%= link_to "Edit this planet", edit_planet_path(@planet) %></p>
