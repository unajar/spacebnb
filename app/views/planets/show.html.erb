<section class="mb-5">

  <div class="row">
    <div class="col-md-6 mb-4 mb-md-0">

      <div id="mdb-lightbox-ui"></div>


      <div class="mdb-lightbox">
        <div class="row product-gallery mx-1">

          <div class="col-12 mb-0">
            <figure class="view overlay rounded z-depth-1 main-img">
              <%= cl_image_tag @planet.photo.key, height: 350, width: 450, crop: :fill %>
              </a>
            </figure>
          </div>
        </div>

      </div>

    </div>
    <div class="col-md-6">

      <h5><%= @planet.name %></h5>
      <p class="mb-2 text-muted text-uppercase small">PLANET</p>
      <p><span class="mr-1"><strong><%= humanized_money_with_symbol(@planet.price) %></strong></span></p>
      <p class="pt-1"><strong>DESCRIPTION:</strong></p>
      <p><%= @planet.description %></p>
      <p class="pt-1"><strong>ADDRESS:</strong></p>
      <p><%= @planet.address %></p>
      <div class="table-responsive">
        <table class="table table-sm table-borderless mb-0">
        </table>
      </div>
      <hr>
      <div class="table-responsive mb-2">
        <table class="table table-sm table-borderless">
        </table>
      </div>
      <%= link_to new_planet_reservation_path(@planet) do %>
        <button type="button" class="btn btn-primary btn-md mr-1 mb-2">Book this planet</button><br/>
      <% end %>
      <%= link_to planets_path do %>
        <button type="button" class="btn btn-secondary btn-md mr-1 mb-2">Back</button>
      <% end %>
    </div>
  </div>
</section>
